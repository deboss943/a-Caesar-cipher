def caesar_cipher(text, shift, mode="encrypt"):
    result = ""

    # If decrypting, reverse the shift
    if mode == "decrypt":
        shift = -shift

    for char in text:
        if char.isalpha():
            # Determine ASCII offset (A=65, a=97)
            offset = 65 if char.isupper() else 97

            # Shift character and wrap around alphabet
            new_char = chr((ord(char) - offset + shift) % 26 + offset)
            result += new_char
        else:
            # Leave numbers, spaces, symbols unchanged
            result += char

    return result


# ---- Example Usage ----
if __name__ == "__main__":
    message = input("Enter your message: ")
    shift = int(input("Enter shift value: "))
    choice = input("Type 'e' to encrypt or 'd' to decrypt: ").lower()

    if choice == "e":
        print("Encrypted message:", caesar_cipher(message, shift, "encrypt"))
    elif choice == "d":
        print("Decrypted message:", caesar_cipher(message, shift, "decrypt"))
    else:
        print("Invalid choice.")

# Encrypt
encrypted_text = caesar('freeCodeCamp', 3)
print(encrypted_text)   # iuhhFrghFdps

# Decrypt
decrypted_text = caesar(encrypted_text, 3, encrypt=False)
print(decrypted_text)   # freeCodeCamp
